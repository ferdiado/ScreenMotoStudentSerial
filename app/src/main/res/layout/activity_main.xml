<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.screenmotostudent.app.MainActivity">

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rmpActual" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insertar Datos"
        android:id="@+id/insertarRpm"
        android:layout_below="@+id/rmpActual"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="0"
        android:layout_below="@+id/insertarRpm"
        android:layout_toRightOf="@+id/rmpActual"
        android:layout_alignParentEnd="true"
        android:inputType="number" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/quadre_de_velocitat"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/temperatura" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/velocidad"
        android:typeface="serif"
        android:textSize="45sp"
        android:textStyle="bold"
        android:layout_below="@+id/editText"
        android:layout_toRightOf="@+id/rmpActual"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/temperatura"
        android:typeface="serif"
        android:textSize="70sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/velocidad"
        android:layout_alignEnd="@+id/editText"
        android:layout_marginRight="115dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton"
        android:layout_marginRight="25dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imageView" />

    <TextView
        android:id="@+id/RXusb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/temperatura"
        android:layout_alignRight="@+id/toggleButton"
        android:text="RXUSB" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:text="Enviar" />

</RelativeLayout>
